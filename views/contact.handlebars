<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no"/>
    <title>Contacts</title>
	<link rel="stylesheet" href="css/contact.css" />
	<script
  		src="https://code.jquery.com/jquery-3.1.1.min.js"
  		integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  		crossorigin="anonymous"></script>
  	<script src="/js/contact.js"></script>
</head>

<body>
	<nav id="nav_bar">
		<ul id="nav_bar_content">
			<li id="nav_bar_left">
				<button id="back_button" class="click_button" onclick="backToIndex()">
					<strong>Back</strong>
				</button>
			</li>
			<li id="nav_bar_middle">
				<strong id="profile_name">
					
				</strong>
			</li>
			<li id="nav_bar_right">
			</li>
		</ul>
	</nav>

	<main>
		<ul id="contact_info">
		</ul>
	</main>
	<script type="text/javascript">
		$.getJSON("people.json", function(data) {
        	console.log(data);
        	var i;
        	var url = window.location.href;
			var index = url.indexOf("?id=");
			var id= url.substring(index+4);
			var $profile_name = $("#profile_name");
        	for (i = 0; i < data.person.length; i++){
        		if (data.person[i].id == id){
        			$('body').append(data.person[i].name);
        			$profile_name.text(data.person[i].name);
        		}
        	}
    	});
	</script>
	</body>
</html>